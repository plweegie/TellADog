<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorToolbar</item>
        <item name="colorPrimaryDark">@color/colorToolbar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:background">@color/colorToolbar</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColorPrimary">@color/control_background</item>
        <item name="android:textColorSecondary">@color/control_background</item>
        <item name="actionMenuTextColor">@color/control_background</item>
    </style>

</resources>
